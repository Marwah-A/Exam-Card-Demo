<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/univ_gradient">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/globe_icon"
        android:src="@drawable/globe_icon"
        android:layout_marginTop="18dp"
        android:layout_marginRight="10dp"
        >
    </ImageView>
    <TextView
        android:id="@+id/english_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@id/globe_icon"
        android:text="English"
        android:textColor="@color/white"
        android:textSize="20sp"></TextView>

    <ImageView
        android:id="@+id/univ_logo_white"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_below="@id/english_option"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:src="@drawable/uni_logo_white"

        ></ImageView>

    <EditText
        android:id="@+id/username_editText"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_below="@id/univ_logo_white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext_corners"
        android:hint="اسم المستخدم"
        android:fontFamily="@font/helveti_arabic"
        android:textAlignment="center"
        android:textSize="22sp"></EditText>

    <EditText
        android:id="@+id/password_editText"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_below="@id/username_editText"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_edittext_corners"
        android:hint="كلمة السر"
        android:inputType="textPassword"
        android:fontFamily="@font/helveti_arabic"
        android:textAlignment="center"
        android:textSize="22sp"></EditText>

    <Button
        android:id="@+id/login_button"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_below="@id/password_editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="1dp"

        android:backgroundTint="@color/uni_brown"
        android:text="دخول"
        android:fontFamily="@font/helveti_arabic"
        android:textSize="22sp"></Button>


    <ImageView
        android:id="@+id/linkedIn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/linkedin_logo"
        android:scaleType="centerCrop"
        ></ImageView>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:src="@drawable/twitter_logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/linkedIn"
        >
    </ImageView>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:src="@drawable/youtube_logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/linkedIn"
        >
    </ImageView>
</RelativeLayout>